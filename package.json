{
  "name": "nekirosrcceditor",
  "version": "1.0.0",
  "description": "edit qt .rcc files",
  "main": "build/App.js",
  "scripts": {
    "start": "npm run compile && electron-forge start",
    "build": "npm run compile && electron-forge make",
    "compile": "rimraf build && tsc && copyfiles src/html/*.html src/css/*.css src/assets/* src/rcc/rcc.exe build",
    "package": "electron-forge package"
  },
  "author": "Nekiro",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@tsconfig/recommended": "^1.0.1",
    "@types/electron": "^1.6.10",
    "@types/fs-extra": "^9.0.13",
    "copyfiles": "^2.4.1",
    "electron": "^13.0.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "fs-extra": "^10.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./build/src/assets/icon.ico",
        "extraResource": "./build/src/rcc",
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "NekirosRccEditor"
          }
        }
      ]
    }
  }
}
